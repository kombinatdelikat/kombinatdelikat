<?php endif; ?>
	</head>
	<body<?php if ($this->debug): ?> class="debug"<?php endif; ?>>

		<div class="sender"><?php if ($this->sender->company): ?><?php echo $this->sender->company; ?><?php else: ?><strong><?php echo $this->sender->firstname; ?> <?php echo $this->sender->lastname; ?></strong><?php endif; ?><br><?php echo $this->sender->street; ?>, <?php echo $this->sender->country ?: 'de'; ?>-<?php echo $this->sender->postal; ?> <?php echo $this->sender->city; ?></div>

		<div class="recipient">
<?php if ($this->recipient->company): ?>
